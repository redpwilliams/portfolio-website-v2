{
  "name": "portfolio-website-v2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/react": "^3.0.6",
    "@astrojs/vercel": "^7.3.5",
    "@commitlint/types": "^18.4.3",
    "@sanity/astro": "^2.2.1",
    "@sanity/client": "^6.8.6",
    "@sanity/vision": "^3.20.1",
    "@types/d3": "^7.4.3",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "astro": "^4.2.0",
    "astro-portabletext": "^0.9.6",
    "d3-drag": "^3.0.0",
    "d3-force": "^3.0.0",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.0.0",
    "d3-selection": "^3.0.0",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "sanity": "^3.20.1",
    "sass": "^1.69.7",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/d3-drag": "^3.0.7",
    "@types/d3-force": "^3.0.9",
    "@types/d3-scale": "^4.0.8",
    "@types/d3-scale-chromatic": "^3.0.3",
    "@types/d3-selection": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.30.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^12.5.0",
    "prettier-plugin-astro": "^0.12.2",
    "react-error-overlay": "^6.0.11"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "overrides": [
      {
        "files": "**/*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-astro"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs,astro}": [
      "eslint  --fix",
      "npx prettier --write"
    ]
  }
}
